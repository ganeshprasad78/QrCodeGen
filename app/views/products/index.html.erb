<div class="row clearfix">
  <div class='col-9'></div>
  <div class="col-3">
    <% if can? :create, Product %>
      <%= link_to 'New Product', new_product_path, class: 'btn btn-lg btn-info pull-right' %>
    <% end %>
  </div>

<h2 class="heading">Products</h1>
<% unless @products.blank? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Product Code</th>
        <th>Manufacturing Date</th>
        <th>Assigned to</th>
        <th>Status</th>
        <th colspan="3">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product %></td>
          <td><%= product.product_code %></td>
          <td><%= date_format product.manufacturing_date %></td>
          <td><%= product.assigned_to.titleize %></td>
          <td><%= product.aasm_state.titleize %></td>
          <td colspan="3">
            <% if can? :production_assign, product %>
              <%= link_to 'Assign to Production', production_assign_product_url(product), method: :put, class: 'btn btn-sm btn-light', data: { confirm: "Are you sure you want to assign #{product.name} to production?" } %>
            <% end %>
            <% if can? :print_assign, product %>
              <%= link_to 'Generate QR code', print_assign_product_url(product), method: :put, class: 'btn btn-sm btn-light', data: { confirm: "Are you sure you want to assign #{product.name} to print?" } %>
            <% end %>
            <% if can? :update, Product %>
              <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-success' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @products %>
<% end %>
</div>