<h3 class="heading">Sign up</h3>
<br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :email, class: 'form-control col-2' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-4' %>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: 'form-control col-2' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-4' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: 'form-control col-2' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-4' %>
  </div>

  <div class="form-group row">
    <div class="col-2"></div>
    <div class="col-2">
      <%= f.submit "Sign up", class: 'btn btn-lg btn-primary pull-right' %>
    </div>
    <div class="col-5">
      <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>


